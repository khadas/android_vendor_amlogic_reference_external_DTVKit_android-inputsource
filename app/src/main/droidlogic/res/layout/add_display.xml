<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/circle_red2"
        android:layout_width="@dimen/px_20.0"
        android:layout_height="@dimen/px_20.0"
        android:background="@drawable/ic_brightness_red_30dp" />

    <TextView
        android:id="@+id/textView_add2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="@dimen/px_3.0"
        android:paddingRight="10dp"
        android:text="@string/dialog_title_add"
        android:textColor="#B3EEEEEE"
        android:textSize="14sp" />
</LinearLayout>
